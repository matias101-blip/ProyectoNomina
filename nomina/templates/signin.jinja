{% extends 'index.jinja' %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col-md-4 offset-md4 mt-3 form-control">
                <h1 class="text-center">autentificacion</h1>
                {{error}}
                <form method="POST" class="card card-body" action="">
                    {% csrf_token %}
                    <div class="mb-3">
                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Escribe tu usuario" />
                    </div>
                    <div class="mb-3">
                        <label for="password">Pasword</label>
                        <input type="text" name="password" id="password" class="form-control" placeholder="Escribe tu contrana" />
                    </div>
                    <button class="btn bt-primary">
                        confirmar
                    </button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
