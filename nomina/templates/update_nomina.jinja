{% extends 'index.jinja' %}

{% block titulo %}
  <title>Actualizar Nomina</title>
{% endblock titulo %}

{% block body %}
  <div class="container">
    <div class="card p-4 mx-auto d-block" style="width: 40em;">
      <h2 class="text-center">Actualizar Rol De Pago</h2>
      <form method="post" action="{% url 'Update_Nomina' id %}">
        {% csrf_token %}
        <div class="gap-3 d-flex flex-column">
          <div class="row">
            <div class="col">
              <label class="form-lable" for="id_empleado">Empleado</label>
              {{ formulario.empleado }}
            </div>
            <div class="col">
              <label class="form-lable" for="id_aniomes">Anio Mes</label>
              {{ formulario.aniomes }}
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label class="form-label" for="id_bono">Bono</label>
              {{ formulario.bono }}
            </div>
            <div class="col">
              <label class="form-label" for="id_horas_extra"
                >Horas Extras</label
              >
              {{ formulario.horas_extra }}
            </div>
          </div>
          <div class="row">
            <button class="btn-primary btn" typr="submit">Actualizar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock body %}
